# Database - PostgreSQL (Required for v2)
DATABASE_URL="postgresql://username:password@localhost:5432/coaching_app"
SHADOW_DATABASE_URL="postgresql://username:password@localhost:5432/coaching_app_shadow"

# Redis Configuration (Optional - will fallback gracefully)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# NextAuth.js (CRITICAL: Change secret in production)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# Google OAuth (Required for Google Workspace authentication)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AI Services (Required for v2 AI features)
OPENAI_API_KEY=""

# Email Service (REQUIRED for password reset functionality)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourdomain.com"
SMTP_SECURE="false"
SMTP_TLS="true"

# Email Templates Configuration
EMAIL_RESET_SUBJECT="Password Reset Request - Coaching App"
EMAIL_RESET_FROM_NAME="Coaching App Security"

# Socket.io Configuration
SOCKET_PORT="3002"
NEXT_PUBLIC_SOCKET_URL="http://localhost:3002"

# Application
NODE_ENV="development"
PORT="3002"

# Monitoring (Optional)
SENTRY_DSN=""
LOG_LEVEL="info"
